@model List<WebUI.Models.ComplaintViewModel>
@{
    ViewData["Title"] = "Eski Taleplerim";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-history me-2"></i>Eski Taleplerim
                    </h4>
                    <div>
                        <a href="@Url.Action("Create")" class="btn btn-primary me-2">
                            <i class="fas fa-plus me-2"></i>Yeni Talep
                        </a>
                        <a href="@Url.Action("MyComplaints")" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Aktif Taleplerim
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Talep No</th>
                                        <th>Başlık</th>
                                        <th>Müdürlük</th>
                                        <th>Durum</th>
                                        <th>Tarih</th>
                                        <th>Atanan Personel</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var complaint in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@complaint.Id</span>
                                            </td>
                                            <td>
                                                <strong>@complaint.Title</strong>
                                                <br>
                                                <small class="text-muted">@(complaint.Description.Length > 50 ? complaint.Description.Substring(0, 50) + "..." : complaint.Description)</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@complaint.DepartmentName</span>
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = complaint.Status switch
                                                    {
                                                        "Talep Alındı" => "bg-warning",
                                                        "Personel Atandı" => "bg-info",
                                                        "İşlem Tamamlandı" => "bg-success",
                                                        "İptal" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@complaint.Status</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @complaint.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(complaint.AssignedPersonnel))
                                                {
                                                    <span class="badge bg-primary">@complaint.AssignedPersonnel</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Atanmamış</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = complaint.Id })" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       data-bs-toggle="tooltip" 
                                                       title="Detayları Görüntüle">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz Eski Talebiniz Bulunmuyor</h5>
                            <p class="text-muted">Tamamlanan veya 30 günden eski talepleriniz burada görüntülenecektir.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Yeni Talep Oluştur
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="dashboard-card text-center">
                    <div class="card-icon">
                        <i class="fas fa-history"></i>
                    </div>
                    <div class="card-number">@Model.Count</div>
                    <div class="card-title">Toplam Eski Talep</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card text-center">
                    <div class="card-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="card-number">@Model.Count(c => c.Status == "İşlem Tamamlandı")</div>
                    <div class="card-title">Tamamlanan</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card text-center">
                    <div class="card-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="card-number">@Model.Count(c => c.CreatedAt < DateTime.Now.AddDays(-30))</div>
                    <div class="card-title">30+ Günlük</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card text-center">
                    <div class="card-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <div class="card-number">@Model.Count(c => !string.IsNullOrEmpty(c.AssignedPersonnel))</div>
                    <div class="card-title">Personel Atanmış</div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .dashboard-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
    }

    .card-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
        opacity: 0.8;
    }

    .card-number {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .card-title {
        font-size: 0.9rem;
        opacity: 0.9;
    }
</style>
