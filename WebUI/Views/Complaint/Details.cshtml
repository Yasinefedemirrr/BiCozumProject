@model WebUI.Models.ComplaintDetailViewModel
@{
    ViewData["Title"] = "Talep Detayları";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-eye me-2"></i>Talep Detayları
                    </h4>
                    <div>
                        <a href="@Url.Action("MyComplaints")" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-list me-2"></i>Taleplerim
                        </a>
                        <a href="@Url.Action("OldComplaints")" class="btn btn-outline-info">
                            <i class="fas fa-history me-2"></i>Eski Taleplerim
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <!-- Talep Bilgileri -->
                            <div class="mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Talep Bilgileri
                                </h5>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Talep No:</label>
                                        <div class="form-control-plaintext">
                                            <span class="badge bg-secondary fs-6">#@Model.Id</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Durum:</label>
                                        <div class="form-control-plaintext">
                                            @{
                                                var statusClass = Model.Status switch
                                                {
                                                    "Talep Alındı" => "bg-warning",
                                                    "Personel Atandı" => "bg-info",
                                                    "İşlem Tamamlandı" => "bg-success",
                                                    "İptal" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @statusClass fs-6">@Model.Status</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Başlık:</label>
                                    <div class="form-control-plaintext fs-5">@Model.Title</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Açıklama:</label>
                                    <div class="form-control-plaintext" style="white-space: pre-wrap;">@Model.Description</div>
                                </div>
                            </div>

                            <!-- Müdürlük ve Personel Bilgileri -->
                            <div class="mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-building me-2"></i>Müdürlük ve Personel Bilgileri
                                </h5>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">İlgili Müdürlük:</label>
                                        <div class="form-control-plaintext">
                                            <span class="badge bg-info fs-6">@Model.DepartmentName</span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Atanan Personel:</label>
                                        <div class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(Model.AssignedPersonnel))
                                            {
                                                <span class="badge bg-primary fs-6">@Model.AssignedPersonnel</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Henüz atanmamış</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Tarih Bilgileri -->
                            <div class="mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-calendar-alt me-2"></i>Tarih Bilgileri
                                </h5>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Oluşturulma Tarihi:</label>
                                        <div class="form-control-plaintext">
                                            <i class="fas fa-calendar me-1"></i>
                                            @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </div>
                                    </div>
                                    @if (Model.LastUpdate.HasValue)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Son Güncelleme:</label>
                                            <div class="form-control-plaintext">
                                                <i class="fas fa-clock me-1"></i>
                                                @Model.LastUpdate.Value.ToString("dd.MM.yyyy HH:mm")
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <!-- Durum Kartı -->
                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        @{
                                            var statusIcon = Model.Status switch
                                            {
                                                "Talep Alındı" => "fas fa-clock",
                                                "Personel Atandı" => "fas fa-user-check",
                                                "İşlem Tamamlandı" => "fas fa-check-circle",
                                                "İptal" => "fas fa-times-circle",
                                                _ => "fas fa-question-circle"
                                            };
                                        }
                                        <i class="@statusIcon fa-3x text-primary"></i>
                                    </div>
                                    <h6 class="card-title">Mevcut Durum</h6>
                                    <p class="card-text">
                                        <span class="badge @statusClass fs-6">@Model.Status</span>
                                    </p>
                                </div>
                            </div>

                            <!-- Hızlı İşlemler -->
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="fas fa-tools me-2"></i>Hızlı İşlemler
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("MyComplaints")" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-list me-2"></i>Tüm Taleplerim
                                        </a>
                                        <a href="@Url.Action("Create")" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-plus me-2"></i>Yeni Talep
                                        </a>
                                        <a href="@Url.Action("OldComplaints")" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-history me-2"></i>Eski Taleplerim
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Talep Geçmişi -->
            @if (Model.History != null && Model.History.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-history me-2"></i>Talep Geçmişi
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            @foreach (var history in Model.History.OrderByDescending(h => h.CreatedAt))
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker"></div>
                                    <div class="timeline-content">
                                        <h6 class="timeline-title">@history.Status</h6>
                                        <p class="timeline-text">@history.Description</p>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            @history.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -35px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #007bff;
        border: 3px solid #fff;
        box-shadow: 0 0 0 3px #007bff;
    }

    .timeline-content {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid #007bff;
    }

    .timeline-title {
        margin-bottom: 5px;
        color: #007bff;
        font-weight: bold;
    }

    .timeline-text {
        margin-bottom: 5px;
        color: #6c757d;
    }
</style>
