@model WebUI.Models.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-list"></i>
                </div>
                <div class="card-number">@Model.TotalComplaints</div>
                <div class="card-title">Toplam Talep</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="card-number">@Model.PendingComplaints</div>
                <div class="card-title">Bekleyen Talep</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="card-number">@Model.CompletedComplaints</div>
                <div class="card-title">Tamamlanan Talep</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="dashboard-card">
                <div class="card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-number">@Model.TotalUsers</div>
                <div class="card-title">Toplam Kullanıcı</div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Grafik -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Aylık Talep İstatistikleri
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="complaintsChart" height="100"></canvas>
                </div>
            </div>
        </div>

        <!-- Son Talepler -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>Son Talepler
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentComplaints != null && Model.RecentComplaints.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var complaint in Model.RecentComplaints.Take(5))
                            {
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@complaint.Title</h6>
                                            <small class="text-muted">
                                                <i class="fas fa-building me-1"></i>@complaint.DepartmentName
                                            </small>
                                            <br>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>@complaint.CreatedAt.ToString("dd.MM.yyyy")
                                            </small>
                                        </div>
                                        <div>
                                            @{
                                                var statusClass = complaint.Status switch
                                                {
                                                    "Beklemede" => "bg-warning",
                                                    "Atandı" => "bg-info",
                                                    "Tamamlandı" => "bg-success",
                                                    "İptal" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @statusClass">@complaint.Status</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Complaints")" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-list me-1"></i>Tüm Talepleri Görüntüle
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Henüz talep bulunmuyor</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Complaints")" class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                                <i class="fas fa-list fa-2x mb-2"></i>
                                <span>Tüm Talepler</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Assignments")" class="btn btn-outline-success w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <span>Personel Atama</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Users")" class="btn btn-outline-info w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                                <i class="fas fa-users fa-2x mb-2"></i>
                                <span>Kullanıcı Yönetimi</span>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-warning w-100 h-100 d-flex flex-column align-items-center justify-content-center p-4">
                                <i class="fas fa-cog fa-2x mb-2"></i>
                                <span>Sistem Ayarları</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Chart data
            const chartData = @Html.Raw(Json.Serialize(Model.MonthlyComplaints));
            
            // Create chart
            const ctx = document.getElementById('complaintsChart');
            if (ctx && chartData) {
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: chartData.map(item => item.month),
                        datasets: [{
                            label: 'Talep Sayısı',
                            data: chartData.map(item => item.count),
                            borderColor: '#0d6efd',
                            backgroundColor: 'rgba(13, 110, 253, 0.1)',
                            tension: 0.4,
                            fill: true
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                                text: 'Aylık Talep Sayısı'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1
                                }
                            }
                        },
                        elements: {
                            point: {
                                radius: 6,
                                hoverRadius: 8
                            }
                        }
                    }
                });
            }
            
            // Add animations
            $('.dashboard-card').addClass('fade-in');
            $('.list-group-item').addClass('slide-in');
            
            // Auto refresh every 5 minutes
            setInterval(function() {
                location.reload();
            }, 300000); // 5 minutes
        });
    </script>
} 